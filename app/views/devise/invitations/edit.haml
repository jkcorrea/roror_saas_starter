%h2= t('devise.invitations.edit.header')
= simple_form_for resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put } do |f|
  = devise_error_messages!
  = f.hidden_field :invitation_token
  .row
    .col-6= f.input :first_name, autofocus: true, required: true
    .col-6= f.input :last_name, required: true
  - min_pword_string = @minimum_password_length ? "Password (#{@minimum_password_length} characters minimum)" : 'Password'
  = f.input :password, label: min_pword_string, autocomplete: 'new-password'
  = f.input :password_confirmation

  = f.button :submit, t('devise.invitations.edit.submit_button')
