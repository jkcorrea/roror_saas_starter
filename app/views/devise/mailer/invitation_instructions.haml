%p= t("devise.mailer.invitation_instructions.hello", email: @resource.email)
- subdomain = Account.find(@resource.invited_account_id).try(:subdomain)
%p= t("devise.mailer.invitation_instructions.someone_invited_you", url: new_user_session_url(subdomain: subdomain))
%p= link_to t("devise.mailer.invitation_instructions.accept"), accept_invitation_url(@resource, invitation_token: @token, subdomain: subdomain)
- if @resource.invitation_due_at
  %p= t("devise.mailer.invitation_instructions.accept_until", due_date: l(@resource.invitation_due_at, format: :'devise.mailer.invitation_instructions.accept_until_format'))
%p= t("devise.mailer.invitation_instructions.ignore").html_safe
